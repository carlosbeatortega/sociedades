{% block content %}
  <div class="span6">
        <h2>{{ socio.name }} </h2>  

        <form action="{{ path('contactos_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            {{ form_errors(edit_form) }}
            <table class="sin_relleno">
              <tr>
                <td><strong>{{ form_label(edit_form.nombre) }}</strong></td>
                <td>{{ form_widget(edit_form.nombre) }}{{ form_errors(edit_form.nombre) }}</td>
              </tr>
              <tr>
                <td><strong>{{ form_label(edit_form.email) }}</strong></td>
                <td>{{ form_widget(edit_form.email) }}{{ form_errors(edit_form.email) }}</td>
              </tr>
              <tr>
                <td><strong>{{ form_label(edit_form.fijo) }}</strong></td>
                <td>{{ form_widget(edit_form.fijo) }}{{ form_errors(edit_form.fijo) }}</td>
              </tr>
              <tr>
                <td><strong>{{ form_label(edit_form.movil) }}</strong></td>
                <td>{{ form_widget(edit_form.movil) }}{{ form_errors(edit_form.movil) }}</td>
              </tr>
            </table>
              {{ form_rest(edit_form) }}
            <br/>
            <table class="record_actions">
                <tr>
                    <button class="btn botonesseparados" type="submit">{{ 'grabar'|trans }}</button>
                </tr>
                <tr>
                    <a onclick='preguntarSiNo("form_delete","{{ 'baja.contacto'|trans }}","{{ path('contactos_delete', { 'id': entity.id }) }}")' href="javascript:void(0);" class="btn botonesseparados">{{'borrar'|trans}}</a>
                </tr>
                <tr>
                    <a class="btn botonesseparados" href="{{ path('contactos') }}">
                        {{ 'contactos'|trans }}
                    </a>
                </tr>
            </table>
        </form>
    </div>
  <div id="dialog-Borrar-reserva" title={{ 'baja.contacto'|trans }}>
        <p><span  style="float: left; margin: 0 7px 20px 0;"></span></p>
  </div>
{% endblock content %}

