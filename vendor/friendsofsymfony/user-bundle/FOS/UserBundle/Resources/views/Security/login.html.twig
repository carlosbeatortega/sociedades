{% extends "SociedadSociedadesBundle::layout.html.twig" %}

{% block fos_user_content %}
<div class="form-horizontal" style="width: 48%;">
    {% if error %}
        <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}
    <h2 class="titulo2_index">{{'sociedad.titulo'|trans({}, 'FOSUserBundle')}}</h2>
    <form class="well form-search" action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="control-group">
            <label class="control-label" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
            <div class="controls">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
            <div class="controls">
                <input type="password" id="password" name="_password" required="required" />
            </div>
        </div>
       <div class="control-group">
            <div class="controls">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>

                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
             </div>
        </div>
        <div class="control-group">
            <div class="controls">
               {{ linkInterno("registro",{ "texto": "REGISTRO" ,"classa" : "'btn btn-large btn-primary'"  })|raw }}
            </div>
         </div>
    </form>
</div>
{% endblock fos_user_content %}
