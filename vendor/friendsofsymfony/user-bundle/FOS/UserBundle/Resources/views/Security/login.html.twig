{% extends "SociedadSociedadesBundle::layout.html.twig" %}

{% block fos_user_content %}
<div class="form-search" style="width: 48%;">
    {% if error %}
        <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}
    <h2 class="titulo2_index hidden-phone hidden-tablet">{{'sociedad.titulo'|trans({}, 'FOSUserBundle')}}</h2>
    <form class="well form-search modal" action="{{ path("fos_user_security_check") }}" method="post">
        <h5 class="titulo2_index hidden-desktop">{{'sociedad.titulo'|trans({}, 'FOSUserBundle')}}</h5>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span8">
                    <div class="control-group">
                        <label class="control-label hidden-phone" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                        <div class="controls">
                            <input class="span8" type="text" id="username" name="_username" placeholder="{{ 'profile.show.username'|trans({}, 'FOSUserBundle') }}" value="{{ last_username }}" required="required" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label hidden-phone" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                        <div class="controls">
                            <input class="span8" type="password" id="password" name="_password" placeholder="{{ 'profile.show.password'|trans({}, 'FOSUserBundle') }}" required="required" />
                        </div>
                    </div>
                   <div class="control-group">
                        <div class="controls">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>

                            <input class="btn" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                           {{ linkInterno("registro",{ "texto": "registrate"  })|raw }}
                         </div>
                    </div>
                </div>
                <div class="span4 hidden-phone">
                    <img alt="Anagrama" src="{{ asset('bundles/sociedad/uploads/images/chiquitero.png') }}">
                </div>
                

            </div>
        </div>
    </form>
</div>
{% endblock fos_user_content %}
